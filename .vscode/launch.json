    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Backend: Launch API (Go)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/cmd/server",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env"
        },
        {
            "name": "Frontend: Launch Vite (pnpm dev)",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm dev",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Frontend: Attach Chrome (http://localhost:5173)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend"
        }
    ],
    "compounds": [
        {
            "name": "Run All (API + Frontend)",
            "configurations": [
                "Backend: Launch API (Go)",
                "Frontend: Launch Vite (pnpm dev)",
                "Frontend: Attach Chrome (http://localhost:5173)"
            ]
        }
    ]
}